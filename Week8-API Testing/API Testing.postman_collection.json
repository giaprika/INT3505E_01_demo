		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"requests": {},
				"exec": [
					"pm.sendRequest({\r",
					"    url: pm.environment.get(\"base_url\") + \"/api/admin/login\",\r",
					"    method: \"POST\",\r",
					"    header: {\"Content-Type\": \"application/json\"},\r",
					"    body: {\r",
					"        mode: \"raw\",\r",
					"        raw: JSON.stringify({\r",
					"            email: pm.environment.get(\"admin_email\"),\r",
					"            password: pm.environment.get(\"admin_password\")\r",
					"        })\r",
					"    }\r",
					"}, function (err, res) {\r",
					"    if (!err) {\r",
					"        const token = res.json().access_token;\r",
					"        pm.environment.set(\"access_token\", token);\r",
					"    }\r",
					"});\r",
					""
				]
			}
